<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background2"
    android:layout_height="match_parent"
    tools:context=".about">
<ImageView
    android:src="@drawable/ic_baseline_arrow_back_ios_24"
    android:layout_margin="20dp"
    android:layout_width="40dp"
    android:id="@+id/backbtn"
    android:layout_height="40dp"/>
    <TextView

        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:textColor="#fff"
        android:fontFamily="@font/bold"
        android:text="Tell us about \nYourself"/>



    <TextView
        android:layout_marginTop="120dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:clickable="true"
        android:editable="false"
        android:gravity="center_vertical"
        android:background="@drawable/input_f"
        android:id="@+id/sleeptime"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:hint="When do you go to sleep?" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:clickable="true"
        android:editable="false"
        android:gravity="center_vertical"
        android:background="@drawable/input_f"
android:id="@+id/waketime"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:hint="When do you wake up?" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:clickable="true"
        android:editable="false"
        android:gravity="center_vertical"
        android:background="@drawable/input_f"
android:id="@+id/lastday"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:hint="Last date of stay in new country" />

    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <AutoCompleteTextView
            android:layout_weight="1"
android:editable="false"
            android:layout_marginRight="4dp"
            android:textSize="16sp"
            android:background="@drawable/input_f"

            android:id="@+id/agee"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:completionThreshold="1"
            android:hint="Age Group" />


    </LinearLayout>

    <Button
        android:id="@+id/sbt"
        android:text="Submit"
        android:textColor="#fff"
        android:fontFamily="@font/bold"
        android:background="@drawable/button_bg"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"/>
</LinearLayout>